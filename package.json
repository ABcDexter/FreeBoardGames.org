{
  "name": "turnato",
  "version": "1.0.0",
  "description": "",
  "main": ".eslintrc.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --forceExit",
    "test:coveralls": "cat coverage/lcov.info | node node_modules/.bin/coveralls",
    "lint": "tslint --fix -c tslint.json 'src/**/*.ts*'",
    "build": "tsc",
    "webpack-run": "webpack && node dist/server.js",
    "prod": "npm run build && webpack && pm2 start pm2-prod.config.js",
    "dev": "tsc-watch --onSuccess \"npm run webpack-run\"",
    "precommit": "npm run build && npm run test && npm run lint"
  },
  "pre-commit": [
    "precommit"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Felizardo/turnato.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Felizardo/turnato/issues"
  },
  "homepage": "https://github.com/Felizardo/turnato#readme",
  "devDependencies": {
    "@types/chai": "^4.0.8",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/jest": "^22.1.1",
    "@types/koa": "^2.0.43",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-static": "^4.0.0",
    "@types/material-ui": "^0.20.8",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.0.28",
    "@types/react-dom": "^16.0.3",
    "@types/react-router-dom": "^4.3.0",
    "@types/shortid": "0.0.29",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "coveralls": "^3.0.0",
    "css-loader": "^1.0.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^22.0.1",
    "koa-helmet": "^3.3.0",
    "nodemon": "^1.18.3",
    "pre-commit": "^1.2.2",
    "react-test-renderer": "^16.2.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^22.0.0",
    "ts-loader": "^3.2.0",
    "tsc-watch": "^1.0.16",
    "tslint": "^5.8.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.9.2",
    "uglifyjs-webpack-plugin": "^1.2.2",
    "webpack": "^3.12.0",
    "webpack-hot-middleware": "^2.22.3"
  },
  "dependencies": {
    "@material-ui/core": "^1.4.3",
    "@types/enzyme": "^3.1.13",
    "@types/koa-router": "^7.0.27",
    "@types/mustache": "^0.8.30",
    "babel-polyfill": "^6.26.0",
    "boardgame.io": "^0.25.5",
    "chess.js": "^0.10.2",
    "copy-to-clipboard": "^3.0.8",
    "copy-webpack-plugin": "^4.5.2",
    "html-webpack-harddisk-plugin": "^0.1.0",
    "koa": "^2.5.2",
    "koa-router": "^7.4.0",
    "koa-send": "^4.1.3",
    "koa-socket-2": "^1.0.17",
    "koa-static": "^4.0.3",
    "material-ui": "^0.20.2",
    "mustache": "^2.3.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-ga": "^2.4.1",
    "react-router-dom": "^4.2.2",
    "shortid": "^2.2.12",
    "socket.io-client": "^2.1.1",
    "workbox-sw": "^2.1.3",
    "workbox-webpack-plugin": "^2.1.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**",
      "!src/server.tsx",
      "!src/app.tsx",
      "!**/*.d.ts",
      "!src/components/games/chess/chessjswrapper.ts"
    ],
    "testURL": "http://localhost",
    "setupFiles": [
      "./test/test-shim.js",
      "./test/test-setup.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.(ts|tsx|js)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleNameMapper": {
      "\\.(css|jpg|png|svg|webp)$": "<rootDir>/test/empty-module.js"
    }
  }
}
