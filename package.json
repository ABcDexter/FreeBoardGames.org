{
  "name": "turnato",
  "version": "1.0.0",
  "description": "",
  "main": ".eslintrc.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --forceExit",
    "test:coveralls": "cat coverage/lcov.info | node node_modules/.bin/coveralls",
    "lint": "tslint --fix -c tslint.json 'src/**/*.ts*'",
    "build": "tsc",
    "webpack-run": "webpack && node dist/server.js",
    "prod": "npm run build && webpack && pm2 start pm2-prod.config.js",
    "dev": "tsc-watch --onSuccess \"npm run webpack-run\"",
    "precommit": "npm run build && npm run test && npm run lint"
  },
  "pre-commit": [
    "precommit"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Felizardo/turnato.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Felizardo/turnato/issues"
  },
  "homepage": "https://github.com/Felizardo/turnato#readme",
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@types/chai": "^4.1.7",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/jest": "^23.3.12",
    "@types/koa": "^2.0.48",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-static": "^4.0.0",
    "@types/material-ui": "^0.20.8",
    "@types/prop-types": "^15.5.8",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-router-dom": "^4.3.1",
    "@types/shortid": "0.0.29",
    "babel-loader": "^8.0.5",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "coveralls": "^3.0.0",
    "css-loader": "^2.1.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "koa-helmet": "^4.0.0",
    "nodemon": "^1.18.9",
    "pre-commit": "^1.2.2",
    "react-test-renderer": "^16.7.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.2.1",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "tsc-watch": "^1.0.31",
    "tslint": "^5.12.1",
    "tslint-react": "^3.2.0",
    "typescript": "^3.2.2",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-hot-middleware": "^2.24.3"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "@material-ui/core": "^1.5.1",
    "@types/enzyme": "^3.1.15",
    "@types/koa-router": "^7.0.37",
    "@types/mustache": "^0.8.32",
    "chess.js": "^0.10.2",
    "copy-to-clipboard": "^3.0.8",
    "copy-webpack-plugin": "^4.6.0",
    "flamecoals-boardgame.io": "^0.33.0",
    "html-webpack-harddisk-plugin": "^1.0.1",
    "koa": "^2.6.2",
    "koa-router": "^7.4.0",
    "koa-send": "^5.0.0",
    "koa-socket-2": "^1.0.17",
    "koa-static": "^5.0.0",
    "material-ui": "^0.20.2",
    "mustache": "^3.0.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-ga": "^2.5.6",
    "react-router-dom": "^4.2.2",
    "shortid": "^2.2.14",
    "socket.io-client": "^2.2.0",
    "workbox-sw": "^3.6.3",
    "workbox-webpack-plugin": "^3.6.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**",
      "!src/server.tsx",
      "!src/app.tsx",
      "!**/*.d.ts",
      "!src/components/games/chess/chessjswrapper.ts"
    ],
    "testURL": "http://localhost",
    "setupFiles": [
      "./test/test-shim.js",
      "./test/test-setup.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.(ts|tsx|js)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleNameMapper": {
      "\\.(css|jpg|png|svg|webp)$": "<rootDir>/test/empty-module.js"
    }
  }
}
