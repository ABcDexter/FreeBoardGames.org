{
  "name": "turnato",
  "version": "1.0.0",
  "description": "",
  "main": ".eslintrc.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --forceExit",
    "test:coveralls": "cat coverage/lcov.info | node node_modules/.bin/coveralls",
    "lint": "tslint -c tslint.json 'src/**/*.tsx'",
    "build": "webpack",
    "server": "node server.js",
    "dev": "webpack-dev-server --host 0.0.0.0",
    "precommit": "npm run build && npm run test && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Felizardo/turnato.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Felizardo/turnato/issues"
  },
  "homepage": "https://github.com/Felizardo/turnato#readme",
  "devDependencies": {
    "@types/chai": "^4.0.8",
    "@types/enzyme": "^3.1.5",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/jest": "^21.1.9",
    "@types/material-ui": "^0.20.0",
    "@types/mocha": "^2.2.44",
    "@types/prop-types": "^15.5.2",
    "chai": "^4.1.2",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "file-loader": "^0.9.0",
    "jest": "^22.0.1",
    "mocha": "^4.0.1",
    "react-test-renderer": "^16.2.0",
    "ts-jest": "^22.0.0",
    "ts-loader": "^3.2.0",
    "tslint": "^5.8.0",
    "tslint-react": "^3.2.0",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1"
  },
  "dependencies": {
    "@types/react": "^16.0.28",
    "@types/react-dom": "^16.0.3",
    "@types/react-router-dom": "^4.2.3",
    "@types/shortid": "0.0.29",
    "boardgame.io": "git+https://github.com/Felizardo/boardgame.io.git#package",
    "chess.js": "^0.10.2",
    "coveralls": "^3.0.0",
    "express": "^4.16.2",
    "material-ui": "^0.20.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "shortid": "^2.2.8"
  },
  "jest": {
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**",
      "!src/app.tsx",
      "!**/*.d.ts"
    ],
    "setupFiles": [
      "./test/test-shim.js",
      "./test/test-setup.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.(ts|tsx|js)"
    ],
    "moduleNameMapper": {
      "\\.(css|jpg|png|svg|webp)$": "<rootDir>/test/empty-module.js"
    }
  }
}
